{
  "manifest_version": 3,
  "name": "shopAI",
  "version": "1.0.0",
  "description": "Shopping assistant that helps you make better purchase decisions",
  "minimum_chrome_version": "114",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "http://localhost:8787/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "shopAI Assistant"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:8787 https://generativelanguage.googleapis.com"
  }
}